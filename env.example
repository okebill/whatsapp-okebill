# =============================================
# VPS DATABASE CONFIGURATION
# =============================================

# Database Host (IP VPS atau localhost)
DB_HOST=localhost

# Database User (username MySQL VPS)
DB_USER=root

# Database Password (password MySQL VPS)
DB_PASS=your_mysql_password

# Database Name (nama database)
DB_NAME=wabot_api

# Database Port (default: 3306)
DB_PORT=3306

# =============================================
# APPLICATION SETTINGS
# =============================================

# Environment (production/development)
NODE_ENV=production

# Server Port
PORT=3000

# Session Secret (ganti dengan random string)
SESSION_SECRET=your_random_session_secret_here

# =============================================
# WHATSAPP SETTINGS
# =============================================

# WhatsApp Session Path
WHATSAPP_SESSION_PATH=./sessions

# =============================================
# SECURITY SETTINGS
# =============================================

# API Rate Limiting
API_RATE_LIMIT=100

# JWT Secret (jika menggunakan JWT)
JWT_SECRET=your_jwt_secret_here

# =============================================
# LOGGING SETTINGS
# =============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path
LOG_FILE=./logs/app.log 