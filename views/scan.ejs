<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Scan QR Code</h4>
        </div>
        <div class="card-body">
          <div class="text-center" id="qr-container">
            <div class="alert alert-info">
              Memuat QR code... Jika sudah terhubung, status akan berubah secara otomatis.
            </div>
            <div id="qrcode">
              <!-- QR code will be displayed here -->
            </div>
            <p class="mt-3" id="connection-status"></p>
          </div>
          <div class="text-center mt-4">
            <a href="/dashboard" class="btn btn-secondary">Kembali ke Dashboard</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Fungsi untuk memeriksa status koneksi
  function checkStatus() {
    fetch('/api/whatsapp/status')
      .then(response => response.json())
      .then(data => {
        const connectionStatus = document.getElementById('connection-status');
        const qrContainer = document.getElementById('qrcode');
        
        if (data.connected) {
          connectionStatus.innerHTML = '<div class="alert alert-success"><strong>Terhubung!</strong> WhatsApp berhasil terhubung.</div>';
          qrContainer.innerHTML = '<div class="text-center"><i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i></div>';
        } else if (data.qr) {
          connectionStatus.innerHTML = '<div class="alert alert-warning"><strong>Belum terhubung!</strong> Scan QR code dengan WhatsApp di ponsel Anda.</div>';
          
          // Membuat URL data untuk QR code
          qrContainer.innerHTML = `<img src="https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=${encodeURIComponent(data.qr)}" class="img-fluid" alt="QR Code">`;
        } else {
          connectionStatus.innerHTML = '<div class="alert alert-danger"><strong>Menunggu QR Code...</strong> Mohon tunggu sebentar.</div>';
          qrContainer.innerHTML = '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>';
        }
      })
      .catch(error => {
        console.error('Error fetching status:', error);
        document.getElementById('connection-status').innerHTML = '<div class="alert alert-danger"><strong>Error!</strong> Gagal memuat status.</div>';
      });
  }

  // Memeriksa status setiap 3 detik
  checkStatus();
  setInterval(checkStatus, 3000);
</script>

