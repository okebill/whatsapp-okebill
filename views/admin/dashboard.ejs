<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>
        <div class="text-muted">
          <i class="fas fa-user"></i> <%= user.username %> (Admin)
        </div>
      </div>

      <!-- Statistics Cards -->
      <div class="row mb-4">
        <div class="col-md-2">
          <div class="card bg-primary text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.total_users %></h4>
                  <small>Total Users</small>
                </div>
                <i class="fas fa-users fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <div class="card bg-warning text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.pending_users %></h4>
                  <small>Pending</small>
                </div>
                <i class="fas fa-clock fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <div class="card bg-success text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.active_users %></h4>
                  <small>Active</small>
                </div>
                <i class="fas fa-check-circle fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <div class="card bg-info text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.trial_users %></h4>
                  <small>Trial</small>
                </div>
                <i class="fas fa-gift fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <div class="card bg-success text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.paid_users %></h4>
                  <small>Paid</small>
                </div>
                <i class="fas fa-credit-card fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <div class="card bg-danger text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4><%= stats.expired_users %></h4>
                  <small>Expired</small>
                </div>
                <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <a href="/admin/users" class="btn btn-primary btn-block">
                    <i class="fas fa-users"></i> Manage Users
                  </a>
                </div>
                <div class="col-md-3">
                  <a href="/admin/settings" class="btn btn-secondary btn-block">
                    <i class="fas fa-cog"></i> System Settings
                  </a>
                </div>
                <div class="col-md-3">
                  <a href="/admin/updates" class="btn btn-info btn-block">
                    <i class="fas fa-sync-alt"></i> Check Updates
                  </a>
                </div>
                <div class="col-md-3">
                  <a href="/admin/api-usage" class="btn btn-success btn-block">
                    <i class="fas fa-chart-line"></i> API Statistics
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="row">
        <!-- Pending Users -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5><i class="fas fa-clock text-warning"></i> Pending Approvals</h5>
            </div>
            <div class="card-body">
              <% if (pendingUsers.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-sm">
                    <thead>
                      <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% pendingUsers.forEach(user => { %>
                        <tr>
                          <td><strong><%= user.username %></strong></td>
                          <td><%= user.email %></td>
                          <td><%= new Date(user.created_date).toLocaleDateString('id-ID') %></td>
                          <td>
                            <a href="/admin/users" class="btn btn-sm btn-primary">
                              <i class="fas fa-eye"></i> Review
                            </a>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
                <div class="text-center mt-3">
                  <a href="/admin/users" class="btn btn-warning">
                    <i class="fas fa-list"></i> View All Pending Users
                  </a>
                </div>
              <% } else { %>
                <div class="text-center text-muted">
                  <i class="fas fa-check-circle fa-3x mb-3"></i>
                  <p>No pending users</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Recent Active Users -->
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5><i class="fas fa-users text-success"></i> Recent Active Users</h5>
            </div>
            <div class="card-body">
              <% if (activeUsers.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-sm">
                    <thead>
                      <tr>
                        <th>Username</th>
                        <th>Status</th>
                        <th>Subscription</th>
                        <th>Expires</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% activeUsers.forEach(user => { %>
                        <tr>
                          <td><strong><%= user.username %></strong></td>
                          <td>
                            <% if (user.payment_status === 'active') { %>
                              <span class="badge bg-success">Active</span>
                            <% } else if (user.payment_status === 'trial') { %>
                              <span class="badge bg-info">Trial</span>
                            <% } else { %>
                              <span class="badge bg-warning"><%= user.payment_status %></span>
                            <% } %>
                          </td>
                          <td><%= user.subscription_type || 'Trial' %></td>
                          <td>
                            <% if (user.subscription_end_date) { %>
                              <%= new Date(user.subscription_end_date).toLocaleDateString('id-ID') %>
                            <% } else { %>
                              -
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
                <div class="text-center mt-3">
                  <a href="/admin/users" class="btn btn-success">
                    <i class="fas fa-list"></i> View All Active Users
                  </a>
                </div>
              <% } else { %>
                <div class="text-center text-muted">
                  <i class="fas fa-user-slash fa-3x mb-3"></i>
                  <p>No active users</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- System Status -->
      <div class="row mt-4">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h5><i class="fas fa-server"></i> System Status</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <div class="text-center">
                    <i class="fas fa-database fa-2x text-success mb-2"></i>
                    <h6>Database</h6>
                    <span class="badge bg-success">Online</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <i class="fab fa-whatsapp fa-2x text-success mb-2"></i>
                    <h6>WhatsApp Service</h6>
                    <span class="badge bg-success">Running</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <i class="fas fa-code fa-2x text-info mb-2"></i>
                    <h6>API Service</h6>
                    <span class="badge bg-success">Active</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="text-center">
                    <i class="fas fa-sync-alt fa-2x text-primary mb-2"></i>
                    <h6>Update System</h6>
                    <span class="badge bg-primary">Ready</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer') %> 