<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Kirim Pesan WhatsApp</h5>
        </div>
        <div class="card-body">
          <% if (!isConnected) { %>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>
              WhatsApp belum terhubung. Silakan <a href="/dashboard/scan">scan QR code</a> terlebih dahulu.
            </div>
          <% } else { %>
            <% if (error) { %>
              <div class="alert alert-danger">
                <i class="fas fa-times-circle me-2"></i>
                <%= error %>
              </div>
            <% } %>
            
            <% if (success) { %>
              <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
              </div>
            <% } %>

            <form action="/dashboard/send-message" method="POST">
              <div class="mb-3">
                <label for="number" class="form-label">Nomor WhatsApp / ID Grup</label>
                <div class="input-group">
                  <span class="input-group-text">+62</span>
                  <input type="text" class="form-control" id="number" name="number" 
                         value="<%= typeof to !== 'undefined' ? to : '' %>"
                         placeholder="8123456789 atau group-id@g.us" required>
                </div>
                <small class="text-muted">
                  Untuk nomor pribadi: Masukkan tanpa awalan +62 atau 0<br>
                  Untuk grup: Gunakan ID grup lengkap (contoh: 123456789-123456@g.us)
                </small>
              </div>
              
              <div class="mb-3">
                <label for="message" class="form-label">Pesan</label>
                <textarea class="form-control" id="message" name="message" rows="4" placeholder="Ketik pesan..." required></textarea>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-paper-plane me-2"></i>
                  Kirim Pesan
                </button>
                <a href="/dashboard" class="btn btn-secondary">
                  <i class="fas fa-arrow-left me-2"></i>
                  Kembali ke Dashboard
                </a>
              </div>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 