<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Test Kirim Pesan</h4>
        </div>
        <div class="card-body">
          <% if (!connected) { %>
            <div class="alert alert-warning mb-4">
              <strong>Peringatan!</strong> WhatsApp belum terhubung. Silakan <a href="/dashboard/scan" class="alert-link">scan QR code</a> terlebih dahulu.
            </div>
          <% } %>
          
          <div id="result" style="display: none;"></div>
          
          <form id="sendMessageForm">
            <div class="mb-3">
              <label for="number" class="form-label">Nomor Tujuan</label>
              <input type="text" class="form-control" id="number" name="number" placeholder="628xxxxxxxxxx" required>
              <div class="form-text">Gunakan format 62 tanpa tanda + dan spasi. Contoh: 628123456789</div>
            </div>
            
            <div class="mb-3">
              <label for="message" class="form-label">Pesan</label>
              <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/dashboard" class="btn btn-secondary">Kembali ke Dashboard</a>
              <button type="submit" class="btn btn-success" <% if (!connected) { %>disabled<% } %>>
                Kirim Pesan
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('sendMessageForm');
    const resultDiv = document.getElementById('result');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const number = document.getElementById('number').value;
      const message = document.getElementById('message').value;
      
      // Tampilkan loading
      resultDiv.innerHTML = '<div class="alert alert-info">Mengirim pesan...</div>';
      resultDiv.style.display = 'block';
      
      // Kirim request ke API
      fetch('/api/whatsapp/send-message', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ number, message })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          resultDiv.innerHTML = '<div class="alert alert-success">Pesan berhasil dikirim!</div>';
        } else {
          resultDiv.innerHTML = `<div class="alert alert-danger">Gagal mengirim pesan: ${data.message}</div>`;
        }
      })
      .catch(error => {
        resultDiv.innerHTML = '<div class="alert alert-danger">Error: Gagal menghubungi server</div>';
        console.error('Error:', error);
      });
    });
  });
</script>

<%- include('partials/footer') %> 