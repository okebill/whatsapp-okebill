<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">Daftar Grup</h5>
          <% if (isConnected) { %>
            <button type="button" class="btn btn-sm btn-primary" onclick="refreshGroups()">
              <i class="fas fa-sync-alt"></i>
              Refresh
            </button>
          <% } %>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-circle me-2"></i>
              <%= error %>
            </div>
          <% } %>

          <% if (!isConnected) { %>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>
              WhatsApp belum terhubung. Silakan <a href="/dashboard/scan">scan QR code</a> terlebih dahulu.
            </div>
          <% } else if (groups && groups.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Nama Grup</th>
                    <th>ID</th>
                    <th>Deskripsi</th>
                    <th>Info</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% groups.forEach(function(group) { %>
                    <tr>
                      <td>
                        <strong><%= group.subject %></strong>
                        <% if (group.owner) { %>
                          <br>
                          <small class="text-muted">Owner: <%= group.owner.split('@')[0] %></small>
                        <% } %>
                      </td>
                      <td>
                        <code><%= group.id %></code>
                      </td>
                      <td>
                        <% if (group.desc) { %>
                          <%= group.desc.length > 50 ? group.desc.substring(0, 50) + '...' : group.desc %>
                        <% } else { %>
                          <span class="text-muted">Tidak ada deskripsi</span>
                        <% } %>
                      </td>
                      <td>
                        <div class="d-flex flex-column">
                          <span><i class="fas fa-users me-1"></i> <%= group.participants %> anggota</span>
                          <% if (group.admins && group.admins.length > 0) { %>
                            <span><i class="fas fa-user-shield me-1"></i> <%= group.admins.length %> admin</span>
                          <% } %>
                          <% if (group.creation) { %>
                            <small class="text-muted">
                              <i class="fas fa-calendar me-1"></i>
                              <%= new Date(group.creation * 1000).toLocaleDateString() %>
                            </small>
                          <% } %>
                        </div>
                      </td>
                      <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-sm btn-primary" 
                                  onclick="sendToGroup('<%= group.id %>')">
                            <i class="fas fa-paper-plane"></i>
                            Kirim Pesan
                          </button>
                          <button type="button" class="btn btn-sm btn-info" 
                                  onclick="showGroupInfo('<%= group.id %>')">
                            <i class="fas fa-info-circle"></i>
                            Detail
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              Tidak ada grup yang ditemukan. Pastikan Anda tergabung dalam grup WhatsApp.
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Detail Grup -->
<div class="modal fade" id="groupInfoModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Detail Grup</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="groupInfoContent">
        Loading...
      </div>
    </div>
  </div>
</div>

<script>
function refreshGroups() {
  window.location.reload();
}

function sendToGroup(groupId) {
  window.location.href = `/dashboard/send-message?to=${encodeURIComponent(groupId)}`;
}

