  if (group) {
    const content = document.getElementById('groupInfoContent');
    content.innerHTML = `
      <div class="mb-3">
        <strong>Nama Grup:</strong><br>
        ${group.subject}
      </div>
      <div class="mb-3">
        <strong>ID:</strong><br>
        <code>${group.id}</code>
      </div>
      <div class="mb-3">
        <strong>Deskripsi:</strong><br>
