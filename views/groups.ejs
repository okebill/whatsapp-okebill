<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Daftar Grup WhatsApp</h4>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>

          <% if (groups && groups.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Nama Grup</th>
                    <th>ID Grup</th>
                    <th>Jumlah Peserta</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% groups.forEach((group, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= group.subject %></td>
                      <td><code><%= group.id %></code></td>
                      <td><%= group.participants %></td>
                      <td>
                        <button class="btn btn-sm btn-primary" onclick="copyGroupId('<%= group.id %>')">
                          <i class="bi bi-clipboard"></i> Copy ID
                        </button>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            
            <div class="mt-3">
              <div class="alert alert-info">
                <strong>Info:</strong> Total <%= groups.length %> grup ditemukan. 
                Klik "Copy ID" untuk menyalin ID grup yang dapat digunakan untuk mengirim pesan.
              </div>
            </div>
          <% } else { %>
            <div class="alert alert-warning">
              <strong>Tidak ada grup!</strong> 
              <p class="mb-0">Belum ada grup WhatsApp yang ditemukan. Pastikan:</p>
              <ul class="mb-0 mt-2">
                <li>WhatsApp sudah terhubung</li>
                <li>Akun WhatsApp Anda sudah bergabung di beberapa grup</li>
                <li>Scan ulang QR code jika diperlukan</li>
              </ul>
            </div>
          <% } %>

          <div class="mt-3">
            <a href="/dashboard" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyGroupId(groupId) {
  navigator.clipboard.writeText(groupId).then(function() {
    // Show success message
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="bi bi-check"></i> Copied!';
    button.classList.remove('btn-primary');
    button.classList.add('btn-success');
    
    setTimeout(() => {
      button.innerHTML = originalText;
      button.classList.remove('btn-success');
      button.classList.add('btn-primary');
    }, 2000);
  }).catch(function(err) {
    console.error('Could not copy text: ', err);
    alert('Gagal menyalin ID grup');
  });
}
</script>

<%- include('partials/footer') %> 